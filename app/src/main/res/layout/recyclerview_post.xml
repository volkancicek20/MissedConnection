<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recycler_profile_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/icon_person"
        android:layout_margin="16dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/recycler_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user-1214"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/recycler_profile_image"
        app:layout_constraintStart_toEndOf="@id/recycler_profile_image"
        app:layout_constraintBottom_toBottomOf="@id/recycler_profile_image"/>

    <TextView
        android:id="@+id/recycler_city_and_district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="İstanbul/Arnavutköy"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/recycler_user_id"
        app:layout_constraintBottom_toBottomOf="@id/recycler_user_id"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.gms.maps.MapView
        android:id="@+id/recycler_map_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/recycler_explain_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Detay"
        app:helperText="*"
        android:textColorHint="@color/black"
        app:counterTextColor="@color/white"
        app:hintTextColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/recycler_map_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/recycler_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:text="asdasjhdgsjhdgfsjdgfjagfjsdgfjsdgfjdsgfjSGFJHSGDJGFASDFSHDAGAJHGFSAJHGFSJHAGFSDAJGFASDGFAJSDFGSDHAGFASDFGDSAGH"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/recycler_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="17:30 - 20:45"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/recycler_explain_layout"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/recycler_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="20 Agustos 2024 - 21 Agustos 2024"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/recycler_explain_layout"
        app:layout_constraintStart_toEndOf="@id/recycler_time"/>



</androidx.constraintlayout.widget.ConstraintLayout>